@using Sitecore.Mvc.Extensions
@model IEnumerable<events.tac.local.Models.NavigationItem>

@using (Html.EditFrame(RenderingContext.Current.ContextItem.Paths.FullPath, 
    "RelatedEvents", "Edit Related Events", "RelatedEvents", null, null))
{
    <div class="bg-primary side-widget">
        <h4 class="text-uppercase">Other events you will like</h4>
        <div class="sidebar">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="@item.Url">@item.Title</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}
